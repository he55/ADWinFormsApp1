    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="AirDrop">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <!-- Content body -->
        <TextBlock x:Name="TextBlock1" TextWrapping="Wrap" FontWeight="Bold" />
        <TextBlock x:Name="TextBlock2" TextWrapping="Wrap" Margin="0,5,0,0" />
        <ProgressBar x:Name="ProgressBar1" Margin="0,10,0,0" />
    </StackPanel>

</ui:ContentDialog>
