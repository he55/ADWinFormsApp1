<UserControl x:Class="ADWpfApp1.MyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ADWpfApp1"
             mc:Ignorable="d" 
             Height="100"
             Width="90" Padding="4"
            >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Ellipse Stroke="Black" Fill="#FF4DDA27" Width="50" Height="50"/>
        <TextBlock x:Name="textBlock1" Grid.Row="1" TextWrapping="Wrap" Text="TextBlock" Foreground="White" HorizontalAlignment="Center"/>
        <TextBlock x:Name="textBlock2" Grid.Row="2" TextWrapping="Wrap" Text="TextBlock" Foreground="White" HorizontalAlignment="Center" FontSize="11"/>
    </Grid>
</UserControl>
